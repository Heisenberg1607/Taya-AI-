generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url removed for Prisma v7 config
}

model MemoryCard {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())

  transcript  String
  title       String
  category    String[]
  actionItems String[]
  completedActionItems Int[] @default([]) // Indices of completed action items
  mood        String
  rawLlmJson  Json

  @@map("memory_cards")
}