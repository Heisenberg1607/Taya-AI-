generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url removed for Prisma v7 config
  // For Supabase: Connection pooling is handled via .env configuration
  // Use port 6543 with ?pgbouncer=true for pooled connections (serverless)
  // Use port 5432 for direct connections (migrations)
}

model MemoryCard {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())

  transcript  String
  title       String
  category    String[]
  actionItems String[]
  completedActionItems Int[] @default([]) // Indices of completed action items
  mood        String
  rawLlmJson  Json

  @@map("memory_cards")
}